<section class="page-image page-image-about md-padding">
  <h1 class="text-white text-center">Workflows</h1>
</section>


<section id="aboutus" class="md-padding">
  <div class="container">

    <div class="container">
      <div class="row">
        <div class="col-md-2 text-left"></div>

        <div class="col-md-8 bg-light py-3">
          <!--file create-->
          {{#if fileId}}
          <h3 class="d-flex justify-content-center">File</h3>
          <h4 class="d-flex justify-content-center">{{fileNo}}</h4>
          <br><br>

          <form action="/createfile/update" method="POST" enctype="multipart/form-data">

            <label class="col-5 col-sm-5">Work Unit:</label>
            <input type="hidden" name="work_unit_id" value="{{work_unit_id}}">
            <label class="col-5 col-sm-5">{{work_unit_name}}</label><br><br>

            <label class="col-5 col-sm-5">Main Process:</label>
            <input type="hidden" name="main_process_id" value="{{main_process_id}}">
            <label class="col-5 col-sm-5">{{main_process_name}}</label><br><br>

            <label class="col-5 col-sm-5">Work Process:</label>
            <input type="hidden" name="workflow_id" value="{{workflow_id}}">
            <label class="col-5 col-sm-5">{{workflow_name}}</label><br><br>



            <label class="col-5 col-sm-5" required>File Type:</label>
            <input type="hidden" name="file_type_id" value="{{file_type_id}}">
            <label class="col-5 col-sm-5">{{file_type_name}}</label><br><br>

            <label class="col-5 col-sm-5">File:</label>
            <input class="col-5 col-sm-5" type="file" accept="application/pdf" name="file" required />
            <br><br><br><br><br>
            <input type="hidden" name="fileId" value="{{fileId}}">
            <button class="btn btn-primary float-right" type="submit" value="Submit">Submit</button>
            {{/if}}

            <!--file upload-->

            {{#unless fileId}}
            <form action="/createfile/upload" method="POST" enctype="multipart/form-data">

              <label class="col-5 col-sm-5">Work Unit:</label>
              <input type="hidden" name="work_unit_id" value="{{work_unit_id}}">
              <label class="col-5 col-sm-5">{{work_unit_name}}</label><br><br>

              <label class="col-5 col-sm-5">Main Process:</label>
              <input type="hidden" name="main_process_id" value="{{main_process_id}}">
              <label class="col-5 col-sm-5">{{main_process_name}}</label><br><br>

              <label class="col-5 col-sm-5">Work Process:</label>
              <input type="hidden" name="workflow_id" value="{{workflow_id}}">
              <label class="col-5 col-sm-5">{{workflow_name}}</label><br><br>

              <label class="col-5 col-sm-5 float-left">File Type:</label>
              <select class="form-control  form-control-sm" style="width: fit-content;" name="file_type_id" required>
                <option value="" selected disabled>Select File Type </option>
                {{#each file_type}}
                <option value="{{file_type_id}}">{{file_type_name}}</option>
                {{/each}}
              </select><br><br>

              <label class="col-5 col-sm-5 float-left">File:</label>

              <input class="col-5 col-sm-5 float-left" type="file" accept="application/pdf" name="file" required />
              <br><br><br><br><br>
              <button class="main-btn float-right" type="submit" value="Submit">Submit</button>

            </form>

            {{/unless}}

        </div>
      </div>

    </div>
</section>
