<!--==========================
    ABOUTUS Section Bizim mekan
============================-->


<section id="aboutus" class="md-padding">
  <div class="container">

    {{#if sessionFlash.message}}
      <div class="{{sessionFlash.type}}">
        {{sessionFlash.message}}
      </div>
    {{/if}}

    <div class="container">

      {{#unless (eq create "0")}}
        <div class="row">
          <div class="col-md-2 text-left"></div>
          <div class="col-md-4 text-left">
            <label id="" for="">Work Unit Code:</label>
            <br><br>
            <label for="">Work Unit Name:</label>
            <br><br>
            <label for="">Academic/Administrative:</label>
            <br><br>
            <label for="">Manager</label>
            <br><br>

          </div>
          <div class="col-md-6">
            <form>
              <input type="text" id="" name="work_unit_code" placeholder="Code"><br><br>
              <input type="text" id="" name="work_unit_name" placeholder="Name"><br><br>
              <select size="1px" name="" id="acad" disabled>
                <option value="">Administrative</option>
              </select><br><br>
              <select size="1px" name="manager" id="">
                <option value="ercan">Ercan Solak</option>
              </select><br><br>
              <button type="submit" class="main-btn" type="submit">Create</button>
            </form>
          </div>
        </div>
      {{/unless}}

      {{#if (eq create "0")}}

        <div class="row">
          <div class="col-md-2 text-left"></div>
          <div class="col-md-4 text-left">
            <label id="" for="">Work Unit Code:</label>
            <br><br>
            <label for="">Work Unit Name:</label>
            <br><br>
            <label for="">Academic/Administrative:</label>
            <br><br>
            <label for="">Manager</label>
            <br><br>

          </div>
          <div class="col-md-6">
            <form form action="/workunits/editworkunit/{{work_unit_id}}" method="POST">

              {{#if (eq edit "1")}}
              <input type="text" id="" name="work_unit_code" class="col-md-8 hello" placeholder="Code" value="{{work_unit_code}}"><br><br>
              <input type="text" id="" name="work_unit_name" class="col-md-8 hello" placeholder="Name" value="{{work_unit_name}}"><br><br>

              {{#if (eq acad 1)}}
                <label for="">Academic</label>
              {{/if}}
              {{#if (eq acad 0)}}
                <label for="">Administrative</label>
              {{/if}}
              <br><br>
              <select size="1px" name="manager" id="">
                <option value="ercan" selected>Ercan Solak</option>
              </select><br><br><br>

              <input type="hidden" name="edit" value="0">
              <button class="btn btn-primary " type="submit" name="save" value="1">Save</button>
              <button class="btn btn-primary " type="submit" name="save" value="0">Cancel</button>
              {{/if}}

              {{#unless (eq edit "1")}}
              <input type="text" id="" name="work_unit_code" class="col-md-8 hello" disabled placeholder="Code" value="{{work_unit_code}}"><br><br>
              <input type="text" id="" name="work_unit_name" class="col-md-8 hello" disabled placeholder="Name" value="{{work_unit_name}}"><br><br>

              {{#if (eq acad 1)}}
                <label for="">Academic</label>
              {{/if}}
              {{#if (eq acad 0)}}
                <label for="">Administrative</label>
              {{/if}}
              <br><br>
              <select size="1px" name="manager" disabled id="">
                <option value="ercan" selected>Ercan Solak</option>
              </select><br><br><br>

              <button class="btn btn-primary " type="submit" name="edit" value="1">Edit</button>
              {{/unless}}
              <br><br>

            </form>

          </div>
        </div>

        <section id="tabs" class="project-tab">
          <div class="container">
            <div class="row">
              <div class="col-md-12">

                <div class="tab-content" id="nav-tabContent " style="border:1px solid #ccc;">
                  <div class="text-center">
                    <h2>Personnel</h2>
                  </div>
                  <div class="tab-pane fade show active" id="nav-home" role="tabpanel">
                    <div class="table-responsive">
                      <div>

                      </div>
                      <table class="table table-hover" cellspacing="0">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Email</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each organisers}}
                            <tr>
                              <th>{{name}}</th>
                              <th>{{surname}}</th>
                              <th>{{email}}</th>

                            </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </section>

      {{/if}}
    </div>
  </div>


</section>
