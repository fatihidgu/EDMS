<!--==========================
    ABOUTUS Section Bizim mekan
============================-->


<section id="aboutus" class="md-padding">
  <div class="container">


    </div>

    {{#if sessionFlash.message}}
      <div class="{{sessionFlash.type}}">
        {{sessionFlash.message}}
      </div>
    {{/if}}
    <!-- {{#each sessionFlash}}
      <div class="{{type}}">
        {{message}}
      </div>
    {{/each}} -->

    <div class="container">

      {{#unless (eq create "0")}}
        <div class="row">
          <div class="col-md-2 text-left"></div>
          <div class="col-md-8 bg-light py-3">
            <h2 class="text-center" style="color:#283792">Work Unit</h2><br><br>
            <form action="/workunits/editworkunit" method="POST">
              <label class="col-5 col-sm-5" id="" for="">Work Unit Code:</label>
              <input class="col-5 col-sm-5" type="text" id="" name="work_unit_code" placeholder="Code" required><br><br>
              <label class="col-5 col-sm-5" for="">Work Unit Name:</label>
              <input class="col-5 col-sm-5" type="text" id="" name="work_unit_name" placeholder="Name" required><br><br>
              <label class="col-5 col-sm-5" for="">Academic/Administrative:</label>
              {{#if (eq acad "1")}}
                <label class="col-5 col-sm-5" for="">Academic</label>
                <input type="hidden" name="acad" value="1">
              {{/if}}
              {{#if (eq acad "0")}}
                <label class="col-5 col-sm-5" for="">Administrative</label>
                <input type="hidden" name="acad" value="0">
              {{/if}}
              <br><br>
              <label class="col-5 col-sm-5" for="">Manager</label>
              <select class="col-5 col-sm-5" size="1px" name="manager" id="">
                {{#each managerOptions}}
                  <option value="{{_id}}">{{email}}</option>
                {{/each}}
              </select><br><br><br><br>
              <button type="submit" class="btn btn-primary float-right" type="submit">Create</button>
            </form>
          </div>
        </div>
      {{/unless}}

      {{#if (eq create "0")}}

        <div class="row">
          <div class="col-md-2 text-left"></div>

          <div class="col-md-8 bg-light py-3">
            <h2 class="text-center" style="color:#283792">Work Unit</h2><br><br>
            <form id="wu-edit-form" action="/workunits/editworkunit/{{work_unit_id}}" method="POST">
              <label class="col-5 col-sm-5" id="" for="">Work Unit Code:</label>
              <input type="text" id="" name="work_unit_code" class="col-5 col-sm-5 wu-edit" placeholder="Code" disabled value="{{work_unit_code}}"><br><br>
              <label class="col-5 col-sm-5" for="">Work Unit Name:</label>
              <input type="text" id="" name="work_unit_name" class="col-5 col-sm-5 wu-edit" placeholder="Name" disabled value="{{work_unit_name}}"><br><br>
              <label class="col-5 col-sm-5" for="">Academic/Administrative:</label>
              {{#if (eq acad "1")}}
                <label class="col-5 col-sm-5" for="">Academic</label>
                <input type="hidden" name="acad" value="1">
              {{/if}}
              {{#if (eq acad "0")}}
                <label class="col-5 col-sm-5" for="">Administrative</label>
                <input type="hidden" name="acad" value="0">
              {{/if}}
              <br><br>
              <label class="col-5 col-sm-5" for="">Manager</label>
              <select size="1px" name="manager" disabled class="col-5 col-sm-5 wu-edit" id="">

                <option value="{{currentManager._id}}" selected="true">{{currentManager.email}}</option>
                {{#each managerOptions}}
                  <option value="{{_id}}">{{email}}</option>
                {{/each}}

              </select><br><br><br>
              {{#if (eq administratorRUId userId)}}
              <button class="btn btn-primary float-right" type="button" onclick="wuEditBtn1f();" name="save" id="wuEditBtn1" style="display:none;">Save</button>
              <button class="btn btn-primary float-right" type="button" onclick="wuEditBtn2f()" id="wuEditBtn2">Edit</button>
              {{/if}}

              <br><br>


            </form>

          </div>
        </div>
        <br><br>
        <section id="tabs" class="project-tab">
          <div class="container">
            <div class="row">
              <div class="col-md-12">


                <div class="tab-content bg-light" id="nav-tabContent " style="border:1px solid #ccc;">
                  <div class="text-center">
                    <br>
                    <h2 class="text-center" style="color:#283792">Personel</h2><br>
                  </div>
                  <div>
                    <div class="table-responsive">
                      <div class="text-center">
                        {{#if (eq managerRUId userId)}}
                        {{#unless (eq organiserOptions.length 0)}}
                          <form class="col-md-12" action="/workunits/addPersonel" method="POST">
                            <label for="" class="mx-3">Choose Personel</label>
                            <select class="mx-3" name="organiserId">

                              {{#each organiserOptions}}
                                <option value="{{_id}}">{{email}}</option>
                              {{/each}}

                            </select>
                            <input type="hidden" name="workUnitId" value="{{work_unit_id}}">
                            <button type="submit" class="btn btn-primary mx-3">Add</button>
                          </form>
                        {{/unless}}
                        {{#if (eq organiserOptions.length 0)}}

                          <form class="col-md-12" action="#" method="POST">
                            <label for="" class="mx-3">Choose Personel</label>

                            <select class="mx-3" name="organiserId" disabled>
                              <option value="" selected>No Value</option>
                            </select>
                            <button type="button" disabled class="btn btn-primary mx-3">Add</button>
                          </form>
                        {{/if}}
                        {{/if}}
                        <br><br>
                      </div>
                      <table class="table table-hover" cellspacing="0">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Email</th>
                            <th>Options</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each organisers}}
                            <tr>
                              <th>{{name}}</th>
                              <th>{{surname}}</th>
                              <th>{{email}}</th>
                              <th>
                              {{#if (eq ../managerRUId ../userId)}}

                                <form action="/workunits/removePersonel" method="POST">
                                  <input type="hidden" name="organiserId" style="display:none;" value="{{organiserId}}">
                                  <button type="submit" class="btn" style="background:none; none;color:#283792">
                                    <i class="fa fa-minus-circle" aria-hidden="true"></i></button>
                                </form>
                                <!-- <button type="button" class="btn" onclick="changeReasonBtnClicked('{{surname}}');" data-toggle="modal" data-target="#changeReason" data-whatever="@{{surname}}" style="background:none">
                                  <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                                </button>

                                <button type="button" class="btn" onclick="rejectReasonBtnClicked('{{name}}');" data-toggle="modal" data-whatever="@{{name}}" data-target="#rejectReason" style="background:none">
                                  <i class="fa fa-times" aria-hidden="true"></i>
                                </button> -->

                              {{/if}}
                              </th>

                            </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </section>

      {{/if}}
    </div>
  </div>


</section>
