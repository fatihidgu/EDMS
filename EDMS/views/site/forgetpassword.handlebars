
<section class="page-image page-image-about md-padding">
    <h1 class="text-white text-center">FORGET PASSWORD</h1>
</section>





<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">Forget Password</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                {{#if sessionFlash.message}}
                <div class="{{sessionFlash.type}}">
                    {{sessionFlash.message}}
                </div>
                {{/if}}
                <form action="/registeredusers/forgetpassword" method="POST">
                    <div class="row">
                        <div class="offset-2 col-md-8">


                            <div class="form-group">
                                <input class="form-control" name="email" type="email"
                                    placeholder="Email"  required="required"
                                    data-validation-required-message="Please enter your Email.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button class="main-btn" type="submit">Send</button>


                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>